{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // Cache build information
    "target": "ES2020", // Set ECMAScript target
    "useDefineForClassFields": true, 
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Include DOM and iterable features
    "module": "ESNext", 
    "skipLibCheck": true, // Skip type checking for library files
    "noEmitOnError": false, // Allow emitting files even if errors exist
    "moduleResolution": "Bundler", 
    "allowImportingTsExtensions": true, 
    "isolatedModules": false, 
    "moduleDetection": "force", 
    "noEmit": true, // Prevent emitting compiled files
    "jsx": "react-jsx", // Enable React JSX
    "strict": false, // Disable strict type checks
    "noUnusedLocals": false, // Allow unused local variables
    "noUnusedParameters": false, // Allow unused function parameters
    "noFallthroughCasesInSwitch": false, 
    "noUncheckedSideEffectImports": false 
  },
  "include": [
    "src/**/*", // Include all source files
    "node_modules/@types" // Include type declarations
  ]
}
